{
  "name": "rescripts",
  "license": "MIT",
  "private": true,
  "author": "Harry Solovay <harrysolovay@gmail.com> (harrysolovay.com)",
  "keywords": [
    "rescript",
    "rescripts",
    "cra",
    "create-react-app",
    "create",
    "react",
    "app",
    "scripts",
    "cli",
    "customization",
    "custom",
    "configuration",
    "config",
    "override"
  ],
  "workspaces": [
    "packages/cli",
    "packages/utilities",
    "packages/rescripts/*",
    "packages/examples/*"
  ],
  "devDependencies": {
    "doctoc": "^1.3.1",
    "husky": "^1.1.4",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "format": "prettier \"**/*.{js,json,md}\"",
    "doctoc": "doctoc README.md --maxlevel 2 --notitle"
  }
}
